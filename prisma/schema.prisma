generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Games {
  id                 String   @id @default(uuid())
  title              String   @unique
  coverImageUrl      String
  description        String
  year               Int
  imdbScore          Int
  trailerYoutubeUrl  String
  gameplayYoutubeUrl String

  genders Genders[]

  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  @@map("games")
}

model Genders {
  id        String   @id @default(uuid())
  name      String   @unique

  games Games[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("genders")
}

model Profiles {
  id        String   @id @default(uuid())
  title     String   @unique
  imageURL  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("profiles")
}

model Users {
  id        String   @id @default(uuid())
  username  String   @unique
  name      String
  email     String
  password  String
  image     String
  cpf       String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
