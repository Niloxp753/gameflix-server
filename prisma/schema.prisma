generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Games {
  id                 String @id @default(uuid())
  title              String @unique
  coverImageUrl      String @unique
  description        String @unique
  year               Int
  imdbScore          Float
  trailerYoutubeUrl  String @unique
  gameplayYoutubeUrl String @unique

  genders Genders[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("games")
}

model Genders {
  id   String @id @default(uuid())
  name String @unique

  games Games[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("genders")
}

model Profiles {
  id       String @id @default(uuid())
  title    String @unique
  imageURL String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("profiles")
}

model Users {
  id       String @id @default(uuid())
  username String @unique
  name     String
  email    String @unique
  password String
  image    String
  cpf      String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
